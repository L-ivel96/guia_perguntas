<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.titulo %></p>
        <hr>
        
        <form method="POST" action="/responder">
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <textarea name="corpo" class="form-control mb-1" placeholder="VocÃª sabe a Resposta? Digite aqui e Compartilhe com todos ^^"></textarea>
            <button class="btn btn-primary">Responder</button>
            <a class="btn btn-primary" href="/">Voltar</a>
        </form>
        
        <hr>
        <h2>Respostas</h2>
        <% respostas.forEach(resposta => { %>
            <div class="card mb-4">
                <div class="card-body">
                    <h3><%= resposta.corpo %></h3>
                </div>
            </div>
        <% }) %>
    </div>
</body>
